<?xml version="1.0" encoding="UTF-8"?>
<model xmlns="http://namespaces.plone.org/supermodel/schema"
       xmlns:form="http://namespaces.plone.org/supermodel/form"
       xmlns:security="http://namespaces.plone.org/supermodel/security">
  <schema>
    <field name="title" type="zope.schema.TextLine">
      <title>Title</title>
    </field>
    <field name="description" type="plone.app.textfield.RichText">
      <title>Description</title>
      <description>General description of the case study</description>
      <required>True</required>
    </field>
    <field name="relavance" type="plone.app.textfield.RichText">
      <title>Relavance</title>
      <description>How the case study relates to the tool</description>
      <required>False</required>
    </field>
  </schema>
</model>
