<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="fhf.toolbox">
<head>
  <metal:slot metal:fill-slot="style_slot">
    <link rel="stylesheet" type="text/css" media="screen"
          href="++resource++fhf.toolbox/toolview.css"/>
    <link rel="stylesheet" type="text/css" media="screen"
          href="++resource++fhf.toolbox/rateit.css"/>
  </metal:slot>

  <metal:slot metal:fill-slot="javascript_head_slot">
    <script src="++resource++fhf.toolbox/jquery.rateit.min.js"></script>

    <script type="text/javascript">
      jq(document).ready(function() {
        console.log('binding to rating');
        jq('#user-rating').bind('rated reset', function(e) {
          var ri=jq(this);
  
          var value = ri.rateit('value');
          var toolid = ri.data('toolid');

          console.info('calling rateit for '+toolid);
  
          jq.ajax({
            url: toolid+'/@@rateit',
            data: { id: toolid, value: value },
            type: 'POST',
            success: function(data) {
              console.info('rateit success');
              console.info(data);
              jq('#overall-rating').rateit('value', data['rating']);
            },
            error: function(jxhr, msg, err) {
              console.error('rateit failed');
            }
          });
        });
      });
    </script>
  </metal:slot>
</head>

<body>
<tal:comment tal:condition="nothing">
    The default view for the FHF Community Toolbox Tool.
</tal:comment>

<metal:main fill-slot="content-core">
  <metal:content-core define-macro="content-core">
    <div id="tool-navigation">
      <a class="prev" tal:condition="view/prev" 
                      tal:attributes="href view/prev" >prev</a>
      <span class="prev" tal:condition="not:view/prev">&nbsp;</span>
      <a class="all" tal:attributes="href view/all" >up (all tools)</a>
      <a class="next" tal:condition="view/next"
                      tal:attributes="href view/next" >next</a>
      <span class="next" tal:condition="not:view/next">&nbsp;</span>
    </div>

    <div id="tool-header">
      <div class="issue-area-icon">
        <img tal:attributes="src string:${context/get_icon}/image_preview" />
      </div>

    <div class="tool-rating">
        <div>Overall:
        <span id="overall-rating" class="rateit"
             tal:attributes="data-rateit-value context/rating"
             data-rateit-ispreset="true" data-rateit-readonly="true"></span>
        </div>
        <br />
        <div>User:
          <span id="user-rating" class="rateit" 
              tal:attributes="data-toolid context/id;
                              data-rateit-value view/urating;"
              data-rateit-ispreset="true">
          </span>
        </div>
    </div>

      <div class="wrapper">
        <div class="label">Issue Area</div>
        <div id="issue_area" tal:content="context/issue_area">Issue Area</div>
      </div>
      <div class="wrapper">
        <div class="label">Audience</div>
        <div id="audience" tal:content="python:context.audience_all()">
      </div>
    </div>

    <div class="wrapper" tal:condition="context/goals">
      <h2 class="label">Goals</h2>
      <div id="goals" tal:content="context/goals">Goals</div>
    </div>

    <div class="wrapper">
      <h2 class="label">Description</h2>
      <div id="description" tal:content="context/overview/output">
        Description
      </div>
    </div>

    <div class="wrapper" tal:condition="context/background">
      <h2 class="label">Background</h2>
      <div id="background" tal:content="structure context/background">
        Background
      </div>
    </div>

    <div class="wrapper" tal:condition="context/case_study/output">
      <h2 class="label">Case Studies</h2>
      <div id="background" tal:content="structure context/case_study/output">
        Case Study
      </div>
    </div>

    <!-- step_1 controls display of entire implmentation section -->
    <div class="wrapper" tal:condition="context/step_1/output">
      <h2 class="divider">Implementation Details</h2>
      <p>A brief outline of the first few steps necessary for implementation
         are provided.  The steps outlined here are provided
         only as a suggested starting point and other approaches are certainly
         valid.
      </p>
      <div class="wrapper"> 
        <h2 class="label">Step 1</h2>
        <div id="step_1" tal:content="structure context/step_1/output">
          Step
        </div>
      </div>
      <div class="wrapper" tal:condition="context/step_2/output">
        <h2 class="label">Step 2</h2>
        <div id="step_2" tal:content="structure context/step_2/output">
          Step
        </div>
      </div>
      <div class="wrapper" tal:condition="context/step_3/output">
        <h2 class="label">Step 3</h2>
        <div id="step_3" tal:content="structure context/step_3/output">
          Step
        </div>
      </div>
    </div>

    <div class="wrapper" tal:condition="context/resources">
      <h2 class="label">Resources</h2>
      <div id="resources" tal:content="context/resources">Resources</div>
    </div>

  </metal:content-core>
</metal:main>

</body>
</html>

