<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="fhf.toolbox">
<head>
  <metal:slot metal:fill-slot="style_slot">
    <link rel="stylesheet" type="text/css" media="screen"
          href="++resource++fhf.toolbox/toolview.css"/>
    <link rel="stylesheet" type="text/css" media="screen"
          href="++resource++fhf.toolbox/rateit.css"/>
  </metal:slot>

  <metal:slot metal:fill-slot="javascript_head_slot">
    <script src="++resource++fhf.toolbox/jquery.rateit.min.js"></script>

    <script type="text/javascript">
      (function($) {
        $(document).ready(function() {

          console.log('binding to rating');
          $('#user-rating').bind('rated reset', function(e) {
            var ri=$(this);
    
            var value = ri.rateit('value');
            var toolid = ri.data('toolid');
  
            $.ajax({
              url: toolid+'/@@rateit',
              data: { id: toolid, value: value },
              type: 'POST',
              success: function(data) {
                console.info('rateit success');
                console.info(data);
                $('#overall-rating').rateit('value', data['rating']);
              },
              error: function(jxhr, msg, err) {
                console.error('rateit failed');
              }
            });
          });
        });
      })(jQuery);
    </script>
  </metal:slot>
</head>

<body>

<tal:comment tal:condition="nothing">
    The default view for the FHF Community Toolbox Tool.
</tal:comment>

<!-- remove system supplied title and description -->
<metal:slot fill-slot="content-title">
  <metal:slot define-macro="content-title">
  </metal:slot>
</metal:slot>

<metal:slot fill-slot="content-description">
  <metal:slot define-macro="content-description">
  </metal:slot>
</metal:slot>

<metal:slot fill-slot="content-core">
  <metal:slot define-macro="content-core">

    <div id="tool-navigation">
      <a class="prev" tal:condition="view/prev" 
                      tal:attributes="href view/prev" >prev</a>
      <span class="prev" tal:condition="not:view/prev">&nbsp;</span>
      <a class="all" tal:attributes="href view/all" >up (all tools)</a>
      <a class="next" tal:condition="view/next"
                      tal:attributes="href view/next" >next</a>
      <span class="next" tal:condition="not:view/next">&nbsp;</span>
    </div>

    <div id="tool-header">
      <div class="tool-rating">
        <div class="tool-rating-overall"><p>Overall:
          <span id="overall-rating" class="rateit"
               tal:attributes="data-rateit-value context/rating"
               data-rateit-ispreset="true" data-rateit-readonly="true"></span>
          </p>
        </div>
        <div class="tool-rating-user"><p>User:
          <span id="user-rating" class="rateit" 
              tal:attributes="data-toolid context/id;
                              data-rateit-value view/urating;"
              data-rateit-ispreset="true">
          </span>
          </p>
          <p class="voting-instructions">(click star to vote)</p>
        </div>
      </div>

      <div id="tool-content">
        <div class="issue-area-icon">
          <img 
            tal:define="navroot context/@@plone_portal_state/navigation_root_url"
            tal:attributes="src string:${navroot}/${context/get_icon}"
          />
        </div>
  
        <div id="issue_area" tal:content="context/issue_area">Issue Area</div>
        <div class="id-title">
          <h2 class="toolid" tal:content="context/toolid">ID</h2>
          <h2 class="title" tal:content="context/title">title</h2>
        </div>
      </div>
  
      <div class="wrapper" tal:condition="context/goals">
        <h2 class="label">Goals</h2>
        <ol>
          <li class="goal" tal:repeat="g context/goals" tal:content="g">Goals</li>
        </ol>
    
      </div>
  
      <div class="wrapper" tal:condition="context/overview">
        <h2 class="label">Description</h2>
        <div tal:content="structure context/overview/output">
          Description
        </div>
      </div>
  
      <div class="wrapper" tal:condition="context/background">
        <h2 class="label">Background</h2>
        <div id="background" tal:content="structure context/background/output">
          Background
        </div>
      </div>
  
      <div class="wrapper" tal:condition="context/info">
        <h2 class="label">Additional Information</h2>
        <div id="info" tal:content="structure context/info/output">
          Info
        </div>
      </div>
    </div> <!-- end of tool-content -->
  
    <div id="implementation">
      <h2 class="divider">Implementation Strategy</h2>
  
      <div class="wrapper" tal:condition="context/partners">
        <h2 class="label">Champions and Partners</h2>
        <div id="partners" tal:content="structure context/partners/output">
          Partners
        </div>
      </div>
  
      <div class="wrapper">
        <h2 class="label">Timeframe</h2>
        <div id="timeframe" tal:content="context/timeframe">
          Timeframe
        </div>
      </div>
  
      <div class="wrapper">
        <h2 class="label">Price</h2>
        <div id="price" tal:content="context/price">
          Price
        </div>
      </div>
  
      <div class="wrapper" tal:condition="context/cost">
        <h2 class="label">Cost Explanation</h2>
        <div id="cost" tal:content="structure context/cost/output">
          Cost
        </div>
      </div>

      <div class="wrapper" tal:condition="context/funding">
        <h2 class="label">Funding Sources</h2>
        <div id="funding" tal:content="structure context/funding/output">
          Funding
        </div>
      </div>
  
      <div class="wrapper" tal:condition="context/steps">
        <h2 class="divider">Implementation Details</h2>
        <p>A brief outline of the first few steps necessary for implementation
           are provided.  The steps outlined here are provided
           only as a suggested starting point and other approaches are certainly
           valid.
        </p>
        <div class="wrapper"> 
          <div id="steps" tal:content="structure context/steps/output">
            Step
          </div>
        </div>
      </div>
    </div> <!-- end of implementation -->

    <div id="case_study">
      <div class="wrapper" tal:condition="context/cs_description">
        <h2 class="divider">Case Study</h2>
  
        <h2 class="label" tal:content="context/cs_title">Title</h2>
        <div class="description" 
             tal:content="structure context/cs_description/output">
          Description
        </div>
  
        <div class="wrapper" tal:condition="context/cs_relavance">
          <h2 class="label">Relavance</h2>
          <div id="cs_relavance" 
               tal:content="structure context/cs_relavance/output">
            Relavance
          </div>
        </div>
      </div>
    </div> <!-- end of case study -->

  </metal:slot>
</metal:slot>

</body>
</html>

